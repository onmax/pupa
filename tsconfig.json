{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}